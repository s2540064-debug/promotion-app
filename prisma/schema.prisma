// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// 階級の定義
enum Rank {
  GOSHO      // 伍長
  JUSHO      // 什長
  HYAKUNINSHO // 百人将
  SANZENNINSHO // 三千人将
  SHOGUN     // 将軍
  DAISHOGUN  // 大将軍
}

// ユーザーモデル（NextAuth対応）
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // パスワード認証用（ハッシュ化）
  
  // 階級システム
  rank          Rank      @default(GOSHO)
  totalPosts    Int       @default(0) // 総武功数
  totalPraises  Int       @default(0) // 獲得した称賛数
  givenPraises  Int       @default(0) // 送った称賛数（称賛ノルマ）
  
  // リレーション
  accounts      Account[]
  posts         Post[]
  praises       Praise[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

// NextAuth用のアカウントモデル
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// NextAuth用のセッションモデル
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// NextAuth用のVerificationTokenモデル
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// 投稿モデル（武功報告）
model Post {
  id        String   @id @default(cuid())
  content   String   @db.Text // 140文字程度のテキスト
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // エンゲージメント
  praiseCount Int    @default(0) // 「天晴れ！」の数
  
  praises     Praise[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("posts")
}

// 称賛モデル（「天晴れ！」ボタン）
model Praise {
  id        String   @id @default(cuid())
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  // 1ユーザーは1投稿に1回だけ称賛できる
  @@unique([postId, userId])
  @@map("praises")
}
